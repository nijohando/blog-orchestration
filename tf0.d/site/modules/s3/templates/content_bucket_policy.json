{
  "Version":"2012-10-17",
  "Statement":[
    {
      "Sid":"AllowAccessFromCloudFront",
      "Effect":"Allow",
      "Principal":"*",
      "Action":"s3:GetObject",
      "Resource":"arn:aws:s3:::${bucket_name}/*",
      "Condition":{
        "StringLike":{"aws:Referer":["${site_url}/${cloudfront_token}"]}
      }
    }
  ]
}
