{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CloudWatchLogging",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "ECRRepositoryAuth",
      "Effect": "Allow",
      "Action": [
        "ecr:GetAuthorizationToken"
      ],
      "Resource": "*"
    },
    {
      "Sid": "BlogRepositoryManagement",
      "Effect": "Allow",
      "Action": [
        "ecr:*"
      ],
      "Resource": "${ecr_repository_arn}"
    },
    {
      "Sid": "BlogBucketManagement",
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "${content_bucket_arn}",
        "${content_bucket_arn}/*"
      ]
    },
    {
      "Sid": "CloudFrontCacheInvalidation",
      "Effect": "Allow",
      "Action": [
        "cloudfront:CreateInvalidation"
      ],
      "Resource": "*"
    }
  ]
}
